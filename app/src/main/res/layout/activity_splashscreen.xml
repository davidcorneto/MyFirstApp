<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="codemargonda.david.com.myfirstapp.Splashscreen">

    <!--Contoh penggunaan Below -->

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/passport"
        android:layout_centerInParent="true"
        />
    <TextView
        android:layout_below="@+id/logo"
        android:textSize="@dimen/size32sp"
        android:layout_margin="@dimen/size16dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/code_margonda"/>

</RelativeLayout>
